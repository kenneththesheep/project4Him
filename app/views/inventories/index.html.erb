<p id="notice"><%= notice %></p>

<h1>Inventories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Remarks</th>
      <th>Total quantity</th>
      <th>Unsorted quantity</th>
      <th>Sorted quantity</th>
      <th>Image url</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.name %></td>
        <td><%= inventory.remarks %></td>
        <td><%= inventory.total_quantity %></td>
        <td><%= inventory.unsorted_quantity %></td>
        <td><%= inventory.sorted_quantity %></td>
        <td><%= inventory.image_url %></td>
        <td><%= inventory.user_id %></td>
        <td><%= link_to 'Show', inventory %></td>
        <td><%= link_to 'Edit', edit_inventory_path(inventory) %></td>
        <td><%= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

